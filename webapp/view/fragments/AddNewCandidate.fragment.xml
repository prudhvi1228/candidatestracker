<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:p="com.penninkhof.controls" xmlns:f="sap.ui.layout.form">
	<Dialog title="Add New Candidate">
		<content>
			<f:SimpleForm id="simpleForm" title="Candidate Details" labelSpanM="3" labelSpanL="3" emptySpanM="6" emptySpanL="6">
				<f:content>
					<Label text="Candidate ID" design="Bold"></Label>
					<Input id="idCndId"></Input>
					<Label text="Name" design="Bold"></Label>
					<Input id="idCndName"></Input>
					<Label text="Surname" design="Bold"></Label>
					<Input id="idCndSurName"></Input>
					<Label text="Skill" design="Bold"></Label>
					<Input id="idCndSkill"></Input>
					<Label text="Interview Date" design="Bold"></Label>
					<DatePicker id="idInterviewDate" valueFormat="dd/mm/yyyy" displayFormat="dd/MM/yyyy" />
					<Label text="Status" design="Bold"></Label>
					<Input id="idCndStats"></Input>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Save" press="onSaveCandidate"></Button>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseCandidate"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>